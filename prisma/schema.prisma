// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// === 下面是你定义的模型 ===

model Caregiver {
  idString      String   @id @default(cuid())
  workerId      String   @unique
  name          String
  phone         String
  idCardNumber  String?  @unique
  birthDate     DateTime?
  gender        String?  @default("女")
  nativePlace   String?
  education     String?

  // Residence Info
  currentResidence String?
  residenceDetail  String?

  // Physical Info
  height        Int?
  weight        Int?

  // Professional Info
  workExpLevel       String?
  experienceYears    Int?
  isLiveIn           String?  // Map to LiveInStatusEnum
  isTrainee          Boolean  @default(false)
  salaryRequirements Int?
  monthlySalary      Decimal  @default(0) @db.Decimal(10, 2)
  
  // JSON Tunnel Fields (Stored as String in MSSQL/Postgres)
  jobTypes      String?
  specialties   String?
  cookingSkills String?
  languages     String?
  certificates  String?
  
  // Media Lists (Stored as JSON string)
  healthCertImages String?
  lifeImages       String?

  // Long Text Content
  workHistory   String?
  selfIntro     String?
  reviews       String?

  // Files
  avatarUrl      String?
  idCardFrontUrl String?
  idCardBackUrl  String?

  notes          String?
  customData     String? // Stores dynamic field values as JSON

  // System Fields
  status    String   @default("PENDING")
  level     String   @default("TRAINEE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders    Order[]
  timeline  CaregiverTimeline[]
  salarySettlements SalarySettlement[]
}

model User {
  id        String   @id @default(cuid())
  name      String?
  phone     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
}

model Order {
  id           String   @id @default(cuid())
  orderNo      String   @unique
  status       String   @default("PENDING") // Enum: PENDING, CONFIRMED, CANCELLED
  amount       Decimal  @db.Decimal(10, 2)
  
  // Financials
  salaryMode    String   @default("DAILY") // "MONTHLY" or "DAILY"
  dailySalary   Decimal? @db.Decimal(10, 2)
  monthlySalary Decimal? @db.Decimal(10, 2)
  durationDays  Int?
  actualWorkedDays Int?

  totalAmount   Decimal  @db.Decimal(10, 2)
  managementFee Decimal @default(0) @db.Decimal(10, 2)
  
  // Dispatch Info
  clientName     String?
  dispatcherName String
  dispatcherPhone String
  clientLocation String
  serviceType    String
  remarks        String?
  
  paymentStatus  String @default("UNPAID")

  startDate    DateTime
  endDate      DateTime
  address      String
  contactName  String
  contactPhone String
  requirements String?
  customData   String?  // Stores dynamic field values as JSON
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clientId     String?
  client       User?    @relation(fields: [clientId], references: [id])

  caregiverId  String
  caregiver    Caregiver @relation(fields: [caregiverId], references: [idString])

  @@index([caregiverId, status, startDate, endDate])
  @@index([startDate, endDate])
}

model CaregiverTimeline {
  idString    String   @id @default(cuid())
  content     String
  imageUrls   String   // JSON array
  createdAt   DateTime @default(now())
  
  caregiverId String
  caregiver   Caregiver @relation(fields: [caregiverId], references: [idString], onDelete: Cascade)
}

model SystemFieldDefinition {
  id          String   @id @default(cuid())
  targetModel String   // e.g., "Caregiver", "Order"
  name        String   // Internal key, e.g., "zodiac"
  label       String   // Display label, e.g., "属相"
  type        String   // "TEXT", "NUMBER", "SELECT", "DATE"
  options     String?  // JSON array for SELECT type
  required    Boolean  @default(false)
  order       Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([targetModel, name])
}

model SystemSettings {
  key         String   @id // e.g., "caregiver_field_config"
  value       String   // Stores JSON structure
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SalarySettlement {
  id          String   @id @default(cuid())
  caregiverId String
  caregiver   Caregiver @relation(fields: [caregiverId], references: [idString])
  month       String   // Format "YYYY-MM"
  totalAmount Decimal  @db.Decimal(10, 2)
  status      String   @default("PENDING") // PENDING, PAID
  details     String?  // JSON breakdown
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([caregiverId, month])
}
