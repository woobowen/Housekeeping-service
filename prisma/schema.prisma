// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "sqlserver"
  url       = env("DATABASE_URL")
}

// === 下面是你定义的模型 ===

model Caregiver {
  idString      String   @id @default(cuid())
  workerId      String   @unique
  name          String
  phone         String
  idCardNumber  String?  @unique
  birthDate     DateTime?
  gender        String?  @default("女")
  nativePlace   String?
  education     String?

  // Professional Info
  workExpLevel       String?
  liveInStatus       String?
  salaryRequirements Int?
  
  // JSON Fields (Stored as String in MSSQL)
  jobTypes      String? @db.NVarChar(Max)
  specialties   String? @db.NVarChar(Max)
  cookingSkills String? @db.NVarChar(Max)
  languages     String? @db.NVarChar(Max)
  certificates  String? @db.NVarChar(Max)

  // Files
  avatarUrl      String?
  idCardFrontUrl String?
  idCardBackUrl  String?

  notes          String?
  metadata       String? @db.NVarChar(Max)

  // System Fields
  status    String   @default("PENDING")
  level     String   @default("TRAINEE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders    Order[]
}

model User {
  id        String   @id @default(cuid())
  name      String?
  phone     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
}

model Order {
  id           String   @id @default(cuid())
  orderNo      String   @unique
  status       String   // 'PENDING', 'CONFIRMED', 'COMPLETED', 'CANCELLED'
  amount       Decimal  @db.Decimal(10, 2)
  startDate    DateTime
  endDate      DateTime
  address      String
  contactName  String
  contactPhone String
  requirements String?  @db.NVarChar(Max)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  clientId     String
  client       User     @relation(fields: [clientId], references: [id])

  caregiverId  String
  caregiver    Caregiver @relation(fields: [caregiverId], references: [idString])

  @@index([caregiverId, status])
  @@index([startDate, endDate])
}
